# name: test/sql/test_is_model_loaded.test
# group: [infera]

# Validate infera_is_model_loaded returns correct booleans

statement ok
pragma enable_verification

statement ok
load 'build/release/extension/infera/infera.duckdb_extension'

# initially false
query I
select infera_is_model_loaded('linear')
----
false

# load
statement ok
select infera_load_model('linear', 'test/models/linear.onnx')

# now true
query I
select infera_is_model_loaded('linear')
----
true

# unload -> false again
statement ok
select infera_unload_model('linear')

query I
select infera_is_model_loaded('linear')
----
false

